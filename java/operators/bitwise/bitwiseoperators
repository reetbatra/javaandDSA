package operators;

public class bitwise {

	public static void main(String[] args) {
		System.out.println(2&3);//and
		System.out.println(2|3);//or
		System.out.println(2^3);//Xor
		System.out.println(~2);//negation
		System.out.println(34<<1);//34*2 leftshift
		System.out.println(34>>2);//34/2=17/2=8
		System.out.println(-4<<1);//take 2's complement of +4 to get -4, -4*2
		System.out.println(-4>>1);//-4/2 rightshift
	}

}
