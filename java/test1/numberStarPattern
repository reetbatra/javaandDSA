package test1;
import java.util.Scanner;
public class numberstarpattern1 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        int i=1;
        while(i<=n){
            int j=1;
            int vals=n;
            while(j<=n) {
            	if(j==(n-i+1)) {
            	System.out.print("*");
            	vals--;
            	j++;
            }
            	else {
            	System.out.print(vals);
            vals--;
            j++;
            
        }
            }
            
        System.out.println();
        i++;
        	
        	
        }
	}   

	}

